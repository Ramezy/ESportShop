<h1>ESportShop</h1>

<% @product_collection.each do |product| %>
    <div class="product">
        <p>
            <b>Style: </b> <%= product.productStyle %>
        </p>
        <p>
            <b>Name: </b> <%= link_to product.productName,  product %>
        </p>
        <p>
            <b>Price: </b> <%= product.productCost %>
        </p>
    </div>
<% end %>
