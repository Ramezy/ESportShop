<div class="product">
    <% if show_link %>
        <h3>
            <%= product.productStyle %> <%= link_to product.productName,  product %> 
        </h3>
    <% else %>
    <div>
        <p><%= link_to "Category", root_path %> /  <%= link_to "#{product.category.name}", results_category_index_path(:category => product.category.id)%> / <%= link_to "#{product.productName}", product_path(:id => product.id)%></p>
    </div>
        <h3>
            <%= product.productStyle %> <%= product.productName %>
        </h3>
        <p>
            <%= product.productCost %>
        </p>
        <p>
            <b>Size: </b> <%= product.productSize %>
        </p>
        <p>
            <b>Description: </b> <%= product.productDescription %>
        </p>

        <% if product.stock > 0%>
            <% if user_signed_in? %>
                <div><%= button_to 'Add  to Cart', cart_create_path(:product_id => product.id) %></div>
            <% else %>
                <div><%= button_to 'Add to Cart', user_session_path %></div>
            <% end %>
        <% else %>
            <div>
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong><p>Sorry! Product out of stock.</p></strong>
            </div>
        <% end %>
    <% end %>

    <% if product.productImage.present? %>
        <p>
            <%= link_to (image_tag product.productImage.url), product %>
        </p>
    <% end %>
    
    

</div>
