<!DOCTYPE html>
<html>
  <head>
    <title>ESportShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div>
        <ul>
          <% if user_signed_in? %>
            <div>
              <%= link_to current_user.email, root_path %>
              <%= link_to "Orders" %>
            </div>
            <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
          <% else %>
              <li><%= link_to 'Sign In', user_session_path %></li>
              <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          </ul>
        <% end %>
      </div>
      <%= form_tag(results_search_index_path, method: "get") do %>
        <%= label_tag(:q, "Search for:") %>
        <%= text_field_tag(:q) %>
        <%= collection_select(:query_cat,:category_id , Category.all.order(:name), :id, :name) %>
        <%= submit_tag("Search") %>
      <% end %>
      <div>
          <% cat = Category.all %>
          <% cat.each do |c| %>
            <p><%= link_to c.name, results_category_index_path(:category => c.id) %></p>
          <% end %>
      </div>
      <div>
        <%= form_tag(filter_index_path, method: "get") do %>
          <%= label_tag(:query, "Filter:") %>
          <%= collection_select(:query_deal, :deal_id, Deal.all.order(:name), :id, :name) %>
          <%= submit_tag("Filter") %>
        <% end %>
        <br>
        <br>
      </div>
    </header>
    <%= render partial: 'shared/header' %>
    <%= render partial: 'shared/menu' %>
    <%= yield %>
  </body>
</html>
